apiVersion: v1
kind: Namespace
metadata:
  name: op-host-manager
---
apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: op-host-manager
  namespace: op-host-manager
spec:
  selector:
    matchLabels:
      name: op-host-manager
  template:
    metadata:
      labels:
        name: op-host-manager
    spec:
      serviceAccountName: op-host-manager-sa
      nodeSelector:
        op-host-manager: "true"
      containers:
      - name: op-host-manager
        image: jellydones/op-host-manager:68d598c
        env:
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: POD_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        resources:
          limits:
            cpu: 200m
            memory: 400Mi
          requests:
            cpu: 200m
      #   ports:
      #   - name: metrics
      #     containerPort: 7300
      #     protocol: TCP
      # readinessProbe:
      #   httpGet:
      #     path: /metrics
      #     port: metrics
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: op-host-manager-sa
  namespace: op-host-manager
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: op-host-manager-role
rules:
- apiGroups: [""]
  resources: ["nodes"]
  verbs: ["get", "list", "update", "patch"]
- apiGroups: [""]
  resources: ["pods"]
  verbs: ["get", "list"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: op-host-manager-role-binding
subjects:
- kind: ServiceAccount
  name: op-host-manager-sa
  namespace: op-host-manager
roleRef:
  kind: ClusterRole
  name: op-host-manager-role
  apiGroup: rbac.authorization.k8s.io
